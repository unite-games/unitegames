<div class="d-flex container py-5 w-50 flex-column text-center">
  <div>
  <% if user_signed_in? %>
      <% if current_user.photo.attached?%>
      <%= cl_image_tag current_user.photo.key, id: "dash-img"%>
      <% else %>
      <%= image_tag "user.jpg", id: "dash-img" %>
      <% end %>
  <% end %>
</div>

  <h1>Hello, <%= current_user.name %>!</h1>
  <h3>Your sales details:</h3>


  <% total = 0 %>
  <% counter = 0 %>
  <% current_user.transactions.each do |t|%>
  <% total += t.game.price %>
  <% counter += 1 %>
  <% end %>

  <h2>You sold <%= counter %> items</h2>
  <h2>Summing up R$ <%= total %> </h2>


</div>
